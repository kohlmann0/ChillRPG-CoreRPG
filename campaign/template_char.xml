	<template name="string_labeled">
		<stringu>
			<script>
				labelwidget = nil;
			
				function onInit()
					if labelres then
						labelwidget = addTextWidget({ 
							font = "sheetlabelinline", 
							text = Interface.getString(labelres[1]):upper(),
						});
					elseif label then
						labelwidget = addTextWidget({ 
							font = "sheetlabelinline", 
							text = label[1]:upper(),
						});
					end
					if labelwidget then
						local w,h = labelwidget.getSize();
						labelwidget.setPosition("bottomleft", w/2, h/2-3);
					end
				end
			</script>
		</stringu>
	</template>
