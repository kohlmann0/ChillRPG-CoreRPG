<root>
	<template name="button_story_add_advanced">
		<buttoncontrol insertbefore="filter_sharedonly">
			<anchored to="rightanchor" width="20" height="20">
				<top />
				<right anchor="left" relation="relative" offset="-5" />
			</anchored>
			<icon normal="button_add_story_advanced" pressed="button_add_story_advanced_down" />
			<tooltip textres="story_button_add_advanced" />
			<script>
				function onButtonPress()
					if not Session.IsHost then
						return;
					end

					if window.clearFilterValues then
						window.clearFilterValues();
					end
					local node = DB.createChild(StoryManager.DEFAULT_BOOK_CONTENT);
					if node then
						local w = Interface.openWindow("referencemanualpage", DB.getPath(node));
						if w and w.name then
							w.name.setFocus();
						elseif w.header and w.header.subwindow and w.header.subwindow.name then
							w.header.subwindow.name.setFocus();
						end
					end
					window.list_iedit.setValue(0);
				end
			</script>
		</buttoncontrol>
	</template>

