<root>
	<template name="anchor_column">
		<genericcontrol>
			<anchored position="insidetop" offset="0,-5" height="0"/>
			<disabled />
			<invisible />
		</genericcontrol>
	</template>
	<template name="line_column">
		<genericcontrol>
			<anchored height="3">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left />
				<right />
			</anchored>
			<frame name="separatorline" />
			<disabled />
		</genericcontrol>
	</template>
	<template name="spacer_column">
		<genericcontrol>
			<anchored height="0">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
				<left />
				<right />
			</anchored>
			<disabled />
		</genericcontrol>
	</template>

	<template name="label_column">
		<label>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="current" offset="7" />
				<left />
			</anchored>
		</label>
	</template>
	<template name="label_column_right">
		<label>
			<anchored>
				<top />
				<right parent="" offset="-60" />
			</anchored>
		</label>
	</template>
	
	<template name="string_column">
		<basicstring>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="97" />
				<right offset="-5" />
			</anchored>
			<multilinespacing>20</multilinespacing>
		</basicstring>
	</template>
	<template name="stringc_column">
		<simplestringc>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="97" />
				<right offset="-5" />
			</anchored>
			<multilinespacing>20</multilinespacing>
			<readonly />
		</simplestringc>
	</template>
	<template name="string_columnh">
		<string_column>
			<script file="common/scripts/column_string.lua" />
		</string_column>
	</template>
	<template name="string_column_left">
		<string_column>
			<anchored width="60">
				<right merge="delete" />
			</anchored>
		</string_column>
	</template>
	<template name="string_column_full">
		<basicstring>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="5" />
				<right offset="-5" />
			</anchored>
			<multilinespacing>20</multilinespacing>
		</basicstring>
	</template>
	<template name="string_columnh_full">
		<string_column_full>
			<script file="common/scripts/column_string.lua" />
		</string_column_full>
	</template>
	<template name="stringc_column_full">
		<simplestringc>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="5" />
				<right offset="-5" />
			</anchored>
			<multilinespacing>20</multilinespacing>
		</simplestringc>
	</template>

	<template name="button_checkbox_column">
		<button_checkbox>
			<anchored width="20" height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="92" />
			</anchored>
		</button_checkbox>
	</template>
	<template name="button_checkbox_columnh">
		<button_checkbox_column>
			<script file="common/scripts/column_number.lua" />
		</button_checkbox_column>
	</template>

	<template name="number_column">
		<basicnumber>
			<anchored width="40" height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="97" />
			</anchored>
		</basicnumber>
	</template>
	<template name="number_columnh">
		<number_column>
			<script file="common/scripts/column_number.lua" />
		</number_column>
	</template>
	<template name="number_column_right">
		<basicnumber>
			<anchored width="40" height="20">
				<top />
				<right parent="" offset="-5" />
			</anchored>
		</basicnumber>
	</template>
	
	<template name="ft_column">
		<basicft>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="5" />
				<right offset="-5" />
			</anchored>
		</basicft>
	</template>
	<template name="ft_columnh">
		<ft_column>
			<script file="common/scripts/column_ft.lua" />
		</ft_column>
	</template>
	<template name="ft_column_labeled">
		<basicft>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="97" />
				<right offset="-5" />
			</anchored>
		</basicft>
	</template>

	<template name="combobox_column">
		<combobox>
			<anchored height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="97" />
				<right offset="-5" />
			</anchored>
			<listdirection>down</listdirection>
		</combobox>
	</template>
	<template name="comboboxc_column">
		<comboboxc>
			<anchored height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="97" />
				<right offset="-5" />
			</anchored>
			<listdirection>down</listdirection>
		</comboboxc>
	</template>
	<template name="combobox_columnh">
		<combobox_column>
			<script file="common/scripts/column_combobox.lua" />
		</combobox_column>
	</template>

	<template name="button_stringcycler_column">
		<button_stringcycler>
			<anchored height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="97" />
				<right offset="-5" />
			</anchored>
		</button_stringcycler>
	</template>
	<template name="button_iconcycler_column">
		<button_iconcycler>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="92" />
			</anchored>
		</button_iconcycler>
	</template>

	<template name="header_column">
		<label>
			<anchored height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
				<left offset="10" />
				<right offset="-10" />
			</anchored>
			<frame name="headersimple" offset="10,3,10,3" />
			<center />
		</label>
	</template>

	<template name="list_column">
		<list_text>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="0" />
				<right offset="-5" />
			</anchored>
			<noscroll />
			<script file="common/scripts/column_list.lua" />
		</list_text>
	</template>
	<template name="anchor_listitem_column_right">
		<genericcontrol name="rightanchor">
			<anchored height="0" width="0">
				<top offset="2" />
				<right />
			</anchored>
		</genericcontrol>
	</template>
	<template name="link_listitem_column">
		<linkcontrol_record name="shortcut">
			<anchored to="rightanchor" width="20" height="20">
				<top />
				<right anchor="left" relation="relative" offset="-5" />
			</anchored>
		</linkcontrol_record>
	</template>
	<template name="button_listitem_column_delete">
		<button_idelete name="idelete">
			<anchored to="rightanchor">
				<top />
				<right anchor="left" offset="-5" />
			</anchored>
		</button_idelete>
	</template>
	<template name="string_listitem_column_name">
		<stringfield name="name">
			<anchored position="insidetopleft" offset="5,2">
				<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
			</anchored>
			<font>sheetlabel</font>
			<multilinespacing>20</multilinespacing>
		</stringfield>
	</template>

	<template name="sub_column">
		<subwindow>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left />
				<right />
			</anchored>
			<script file="common/scripts/column_sub.lua" />
		</subwindow>
	</template>
	<template name="sub_column_gmnotes">
		<sub_column>
			<script>
				function onInit()
					if Session.IsHost then
						setValue("sub_column_gmnotes", window.getDatabaseNode());
					end
				end
			</script>
		</sub_column>
	</template>
	<windowclass name="sub_column_gmnotes">
		<margins control="0,0,0,5" />
		<script>
			function update(bReadOnly)
				gmnotes.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<header_column name="gmnotes_header">
				<static textres="header_gmnotes" />
			</header_column>
			<ft_columnh name="gmnotes" />
		</sheetdata>
	</windowclass>
</root>
