	<template name="button_icon_sm">
		<buttoncontrol>
			<anchored width="20" height="20" />
			<frame name="buttonup" offset="2,2,2,2" />
			<stateframe>
				<pressed name="buttondown" offset="2,2,2,2" nobaseframe="true" />
			</stateframe>
			<pressed offset="1,1" />
